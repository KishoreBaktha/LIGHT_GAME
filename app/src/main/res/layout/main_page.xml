<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/textColorLinkInverse"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2b2b22"
        android:text="WELCOME TO LIGHT  GAME!!!!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#f22b21"
        android:text="The game screen contains bunch of lights. When you click on the light it changes its color and also changes color of the nearest lights. Color changing is strict - GREEN, BLUE, RED. Your job is to make all of the lights glow in green color."
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/alert_dark_frame"
        android:onClick="Next"
        android:text="PRACTICE"
        android:textColor="#ff2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="NEXT2"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="START"
        android:textColor="#ff2"
        android:textSize="30sp" />

</LinearLayout>